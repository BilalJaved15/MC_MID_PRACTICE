<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LifeCycleActivity1">

    <Button
        android:id="@+id/btnSecondActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Click me for second activity"
        app:layout_constraintBottom_toTopOf="@+id/btnDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Click me boya for dialog box"
        app:layout_constraintEnd_toEndOf="@+id/btnSecondActivity"
        app:layout_constraintStart_toStartOf="@+id/btnSecondActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnSecondActivity" />

    <Button
        android:id="@+id/btnToast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="click me for customized toast"
        app:layout_constraintEnd_toEndOf="@+id/btnDialog"
        app:layout_constraintStart_toStartOf="@+id/btnDialog"
        app:layout_constraintTop_toBottomOf="@+id/btnDialog" />
</androidx.constraintlayout.widget.ConstraintLayout>